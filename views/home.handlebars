    <body>
        {{> navbar }}  
        
        <!--Insert Video-->
        <div class="container">
            <div class="video-container">
                <video muted autoplay loop>
                    <source src="../assets/SA 14 LOADING AND UNLOADING DOCKS.mp4">
                </video>
                <div class="overlay">
                    <h1 id="text13">Welcome!</h1>
                    <p id="text14">to South Alps Cold Storage and Logistics!</p>
                 </div>
            </div>
        </div>
        
        <!--Two Photos Back to Back-->
        <div class="container2">
            <div class="image-card">
                <img src="../assets/{{imageMappings.image1}}" alt="{{imageMappings.image1}}" class="image" id="image1">
                <div class="image-desc-1">
                    <p class="heading-text" id="text1">{{textMappings.text1}}</p>
                    <p class="subtext" id="text2">{{textMappings.text2}}</p>
                </div>
            </div>
            <div class="image-card">
               <img src="../assets/{{imageMappings.image2}}" alt="{{imageMappings.image1}}" class="image" id="image2">
                
                <div class="image-desc-1">
                    <p class="heading-text" id="text3">{{textMappings.text3}}</p>
                    <p class="subtext" id="text4">{{textMappings.text4}}</p>
                </div>
            </div>
        </div>
        <!--Mission and Vision-->
        <div class="container3">
            <p class="heading-text" id="text5">{{textMappings.text5}}</p>
            <div class = "container4">
                <div class="section">
                    <p class="heading-text" id="text6">{{textMappings.text6}}</p>
                    <p class="subtext" id="text7">{{textMappings.text7}}</p>
                </div>
                <div class="section">
                    <p class="heading-text" id="text8">{{textMappings.text8}}</p>
                    <p class="subtext" id="text9">{{textMappings.text9}}</p>
                </div>
            </div>
        </div>
        <!--Map and Location-->
        <div class="container5">
<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15464.175525302959!2d121.0354923!3d14.3088832!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397d77215481a29%3A0x451e1ac49df52f99!2sSouth%20Alps%20Cold%20Storage%20and%20Logistics%20Inc.!5e0!3m2!1sen!2sph!4v1699194634848!5m2!1sen!2sph"  allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            <div class="content">
                <p class="heading-text" id="text10">{{textMappings.text10}}</p>
                <p class="subtext" id="text11">{{textMappings.text11}}</p>
                <div class="line"></div>
                <p class="subtext-2" id="text12">{{textMappings.text12}}</p>
