{{#if isAdminMode}}
<div class="admin-hotbar">
    <button class="edit-text" id="edit-text">Edit Text</button>
    <button class="edit-img" id="edit-img">Edit Images</button>
    <button class="add-acr" id="add-acr" style="display: none;">Add Accreditations</button>
    <button class="del-acr" id="del-acr" style="display: none;">Delete Accreditations</button>
    <button id="add" style="display: none;">Add Service</button>
    <button class="add-car" id="add-car" style="display: none;">Add Career</button>
    <button class="add-fac" id="add-fac" style="display: none;">Add Facility</button>
    {{!-- <button id="add">Add</button> --}}
    {{!-- <button id="delete">Delete</button> --}}
</div>

<!-- The hidden modal -->
{{!-- class admin removes it from being selected by the edit --}}
<div class="modal" id="text-space">
    <div class="modal-content" id="text-box">
        <textarea id="text-area" rows="4" cols="50" maxlength="600"></textarea>
        <button class="admin button1" id="text-change">Change</button>
        <button class="admin button1" id="text-cancel">Cancel</button>
    </div>
</div>

<div class="modal" id="image-space">
    <div class="modal-content" id="image-box">
        <input type="file" id="image-upload" name="image-upload" style="display: none;" accept="image/*">
        <label for="image-upload" id="image-label">Edit Image</label>
        <center><img class="admin" id="uploaded-image" src="" alt="Uploaded Image" style="max-width: 50%;"></center>
        <button class="admin button1" id="image-change">Change</button>
        <button class="admin button1" id="image-cancel">Cancel</button>
    </div>
</div>

<div class="modal" id="acr-space">
    <div class="modal-content" id="acr-box">
        <input type="file" id="acr-upload" name="acr-upload" style="display: none;" accept="image/*">
        <label for="acr-upload" id="acr-label">Upload Image</label>
        <img class="admin" id="acr-uploaded-image" style="max-width: 50%;">
        <button class="admin button1" id="acr-submit" style="display: none;">Submit</button>
        <button class="admin button1" id="acr-submit-cancel">Cancel</button>
    </div>
</div>

<div class="modal" id="acrdel-space">
    <div class="modal-content" id="text-box">
        <h1 class="admin">Delete Accreditation?</h1>
        <button class="admin button1" id="acr-del">Proceed</button>
        <button class="admin button1" id="acr-del-cancel">Cancel</button>
    </div>
</div>
<div class="modal" id="car-space">
    <div class="modal-content" id="text-box">
        <h1 class="admin">Job Title</h1>
        <textarea id="car-title-area" rows="4" cols="50" maxlength="40" placeholder="Max length of 40 characters"></textarea>
        <h1 class="admin">Job Description</h1>
        <textarea id="car-desc-area" rows="4" cols="50" maxlength="600" placeholder="Max length of 600 characters"></textarea>
        <button class="admin button1" id="car-submit" style="display: none;">Submit</button>
        <button class="admin button1" id="car-submit-cancel">Cancel</button>
    </div>
</div>
<div class="modal" id="cardel-space">
    <div class="modal-content" id="text-box">
        <h1 class="admin">Delete Career?</h1>
        <button class="admin button1" id="car-del">Proceed</button>
        <button class="admin button1" id="car-del-cancel">Cancel</button>
    </div>
</div>
<div class="modal" id="fac-space">
    <div class="modal-content" id="fac-box">
        <input type="file" id="fac-upload" name="fac-upload" style="display: none;" accept="image/*">
        <label for="fac-upload" id="fac-label">Upload Image</label>
        <img class="admin" id="fac-uploaded-image" style="max-width: 50%;">
        <h1 class="admin">Facility Description</h1>
        <textarea id="fac-desc-area" rows="4" cols="50" maxlength="600" placeholder="Max length of 600 characters"></textarea>
        <button class="admin button1" id="fac-submit" style="display: none;">Submit</button>
        <button class="admin button1" id="fac-submit-cancel">Cancel</button>
    </div>
</div>
<div class="modal" id="facdel-space">
    <div class="modal-content" id="text-box">
        <h1 class="admin">Delete Facility?</h1>
        <button class="admin button1" id="fac-del">Proceed</button>
        <button class="admin button1" id="fac-del-cancel">Cancel</button>
    </div>
</div>
{{/if}}

<script>
    const currentURL = window.location.href;
    console.log(currentURL);

    if(currentURL.includes("/services")){
         document.addEventListener('DOMContentLoaded', function () {
            // Show the "Add" button
            document.getElementById('add').style.display = 'block';
        });
    }    
    if(currentURL.includes("/careers")){
        document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('add-car').style.display = 'block';
    })
    }
    if(currentURL.includes("/facility")){
        document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('add-fac').style.display = 'block';
    });
    }    
</script>

